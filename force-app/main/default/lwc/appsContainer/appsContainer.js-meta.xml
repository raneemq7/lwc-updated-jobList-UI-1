<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Updated Jobs List UI</masterLabel>
    <description>Displays jobs associated to a particular client in a list format</description>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>TR1__Job__c</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="recordId" default="" type="String" 
                label="Client ID" description="The value should be {!recordId}."/>
            <property name="NumberOfRecords" label="Number of records to return" type="Integer" />
            <property name="jobDetailPageAPIName" label="Job Detail Page API Name" type="String" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>